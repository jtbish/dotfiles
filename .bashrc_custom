# =============================================================================
# General (all machines) settings
# =============================================================================
# -----------------------------------------------------------------------------
# Aliases
# -----------------------------------------------------------------------------
alias ll="ls -AhlF"
alias ..="cd .."
alias c="clear"
alias l="ls"
alias rmd="rm -rf"

# -----------------------------------------------------------------------------
# Functions
# -----------------------------------------------------------------------------
cdll () {
    cd "$1" && ll;
}

..ll () {
    cd .. && ll;
}

bu () {
    cp -r "$1"{,.backup};
}

pyclean () {
    find . -type d -name "__pycache__" | xargs rm -rfv 2> /dev/null
    find . -type f -name "*.pyc" | xargs rm -v 2> /dev/null
}

# -----------------------------------------------------------------------------
# Other
# -----------------------------------------------------------------------------
# green bold text prompt
export PS1="\[\033[1;32m\][\u@\h \w]\$\[\033[0m\] "
# disable terminal emulator capturing ctrl-s (suspend) key code so forward
# search can be used in bash
stty -ixon
# modify trace output to have line number prefix
PS4='$LINENO: '

# =============================================================================
# Local machine (non-cluster) settings
# =============================================================================
if [[ "$(hostname)" == "dingo" || "$(hostname)" == "pelican" ]]; then
    # -----------------------------------------------------------------------------
    # Aliases
    # -----------------------------------------------------------------------------
    alias hib="sudo systemctl hibernate"
    # use neovim instead of vim
    alias vim="nvim"

    # -----------------------------------------------------------------------------
    # Neovim
    # -----------------------------------------------------------------------------
    export VIMCONFIG=~/.config/nvim
    export VIMDATA=~/.local/share/nvim
    export VISUAL='nvim'

    if [ -n "$NVIM_LISTEN_ADDRESS" ]; then
        # change prompt to make nvim terminal easy to distinguish
        export PS1="$PS1>> "
        # avoid nvim nesting by printing a warning message
        alias nvim='echo "No nesting!"'
    fi
fi
